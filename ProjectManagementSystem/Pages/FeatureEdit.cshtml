@page
@model ProjectManagementSystem.Pages.FeatureEditModel

@{
    ViewData["Title"] = "FeatureEdit";
}

<h1>FeatureEdit</h1>

<h4>Feature</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Feature.Id" />
            <div class="form-group">
                <label asp-for="Feature.ProjectId" class="control-label"></label>
                <select asp-for="Feature.ProjectId" class="form-control" asp-items="ViewBag.ProjectId"></select>
                <span asp-validation-for="Feature.ProjectId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Feature.Name" class="control-label"></label>
                <input asp-for="Feature.Name" class="form-control" />
                <span asp-validation-for="Feature.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Feature.Description" class="control-label"></label>
                <input asp-for="Feature.Description" class="form-control" />
                <span asp-validation-for="Feature.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Feature.CreatedAt" class="control-label"></label>
                <input asp-for="Feature.CreatedAt" class="form-control" />
                <span asp-validation-for="Feature.CreatedAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

