@page
@model ProjectManagementSystem.Pages.SignUpModel
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProjectManagementSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProjectManagementSystem.styles.css" asp-append-version="true" />
</head>

<body class="d-flex justify-content-center vh-100 container">
    <main class="d-flex align-items-center h-100">
        <div class="d-flex main flex-column justify-content-center gap-4 bg-white px-4 py-5 rounded-3 shadow-sm">
            <header class="d-flex flex-column gap-2">  
                <h3 class="text-center mb-0">Project Management</h3>
                <p class="text-center mb-0">Create an account to start managing your projects.</p>
            </header>
            <form method="post" class="d-flex flex-column">
                <div class="text-danger text-center" asp-validation-summary="ModelOnly"></div>
                <div class="d-flex flex-column gap-3 input-wrapper">
                    <div class="d-flex flex-column gap-2">
                        <input type="text" class="form-control" placeholder="first name" asp-for="FirstName"     required />
                        <input type="text" class="form-control" placeholder="last name" asp-for="LastName" required />
                        <input type="email" class="form-control" placeholder="email" asp-for="Email" required />
                        <input type="text" class="form-control" placeholder="phone number" asp-for="Mobile" required />
                        <input type="password" class="form-control" placeholder="password" asp-for="Password" required />
                        <input type="password" class="form-control" placeholder="confirm password" 
                            asp-for="ConfirmPassword" required />
                    </div>
                    
                    <div class="d-flex justify-content-between">
                        <div class="d-flex align-items-center gap-1">
                            <p class="mb-0">already have an account <span><a class="text-decoration-none" asp-page="Index">Login</a></span></p>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-dark">Create Account</button>
                </div>
            </form>
        </div>

    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>

